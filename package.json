{
	"author": "Ayfri",
	"bugs": {
		"url": "https://github.com/Ayfri/PIXI-Extended/issues"
	},
	"dependencies": {
		"pixi.js": "^6.0.2"
	},
	"description": "A framework as a npm library to help you develop with PIXI 2d games.",
	"devDependencies": {
		"@types/gulp": "^4.0.8",
		"@types/node": "^14.14.41",
		"esbuild": "^0.11.12",
		"gulp": "^4.0.2",
		"gulp-clean": "^0.4.0",
		"gulp-esbuild": "^0.7.4",
		"prettier": "^2.2.1",
		"reload": "^3.1.1",
		"typescript": "^4.2.4"
	},
	"homepage": "https://github.com/Ayfri/PIXI-Extended#readme",
	"keywords": [
		"pixi",
		"pixi-extended",
		"pixi-utils",
		"utils",
		"2d",
		"games"
	],
	"license": "GNU",
	"main": "dist/index.js",
	"name": "pixi-extended",
	"prettier": {
		"arrowParens": "avoid",
		"bracketSpacing": false,
		"printWidth": 180,
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "es5",
		"useTabs": true
	},
	"types": "types",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Ayfri/PIXI-Extended.git"
	},
	"scripts": {
		"bundle": "npm run prettier && gulp bundle",
		"declarations": "gulp clean && tsc --declaration --emitDeclarationOnly --outDir types --skipLibCheck",
		"prepare": "gulp publish && npm run declarations",
		"prettier": "prettier --write src ./*.json README.md gulpfile.js",
		"tests": "reload --dir=dist --port=5000",
		"watch": "npm run bundle && gulp watch"
	},
	"version": "0.1.2"
}
